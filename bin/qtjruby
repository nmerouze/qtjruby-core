#!/usr/bin/env jruby
qtjambi_dir = "{#{ENV_JAVA['jruby.home']},#{Dir.pwd}}"
Dir.glob(qtjambi_dir + '/lib/qtjambi-*.jar') { |jar| require jar }
require 'rubygems'

if File.exist?(gem_dir = File.join(Dir.pwd, 'gems'))
  Gem.clear_paths
  Gem.path.unshift(gem_dir)
end

gem 'extlib', '~> 0.9.9'
require 'extlib'

require 'qtjruby-core'
require ARGV.shift